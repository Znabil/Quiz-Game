<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ctlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_back"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintWidth_percent=".1"
        app:layout_constraintHeight_percent=".05"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="@id/ctlayout"
        app:layout_constraintTop_toTopOf="@id/ctlayout"
        app:srcCompat="?attr/homeAsUpIndicator" />

    <TextView
        android:id="@+id/txt_numQuestions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="numQuestions: 1 / 5"
        app:layout_constraintRight_toRightOf="@id/img_question"
        app:layout_constraintBottom_toBottomOf="@id/img_back"
        />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:max="100"
        android:progress="0"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent=".01"
        app:layout_constraintLeft_toLeftOf="@id/ctlayout"
        app:layout_constraintRight_toRightOf="@id/ctlayout"
        app:layout_constraintTop_toBottomOf="@id/img_back"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent=".8" />

    <ImageView
        android:id="@+id/img_question"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintWidth_percent=".8"
        app:layout_constraintHeight_percent=".3"
        app:srcCompat="@mipmap/superman"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="@id/progressBar"
        app:layout_constraintRight_toRightOf="@id/progressBar"
        app:layout_constraintTop_toBottomOf="@id/progressBar"
        />

    <TextView
        android:id="@+id/txtQuestion"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/txtborder"
        android:gravity="center"
        android:text="Who is the man in the picture?"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent=".1"
        app:layout_constraintLeft_toLeftOf="@id/img_question"
        app:layout_constraintRight_toRightOf="@id/img_question"

        app:layout_constraintTop_toBottomOf="@id/img_question"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent=".8"
        />

    <Button
        android:id="@+id/btn1"
        android:textAllCaps="false"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Iron Man"
        android:layout_marginTop="10dp"

        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent=".1"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent=".8"
        app:layout_constraintLeft_toLeftOf="@id/txtQuestion"
        app:layout_constraintRight_toRightOf="@id/txtQuestion"
        app:layout_constraintTop_toBottomOf="@id/txtQuestion"



        />

    <Button
        android:id="@+id/btn2"
        android:textAllCaps="false"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:text="Spider Man"

        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent=".1"
        app:layout_constraintLeft_toLeftOf="@id/btn1"
        app:layout_constraintRight_toRightOf="@id/btn1"
        app:layout_constraintTop_toBottomOf="@id/btn1"

        />

    <Button
        android:id="@+id/btn3"
        android:textAllCaps="false"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:text="Bat Man"

        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent=".8"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent=".1"
        app:layout_constraintLeft_toLeftOf="@id/btn2"
        app:layout_constraintRight_toRightOf="@id/btn2"
        app:layout_constraintTop_toBottomOf="@id/btn2"
        />

    <Button
        android:id="@+id/btn4"
        android:textAllCaps="false"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:text="Super Man"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent=".8"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent=".1"
        app:layout_constraintLeft_toLeftOf="@id/btn3"
        app:layout_constraintRight_toRightOf="@id/btn3"
        app:layout_constraintTop_toBottomOf="@id/btn3"
        />


</androidx.constraintlayout.widget.ConstraintLayout>