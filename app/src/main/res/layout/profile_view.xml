<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/profile_layout"
    >

    <TextView
        android:id="@+id/txt_favouriteTopics"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintHeight_percent=".15"
        app:layout_constraintWidth_percent=".8"

        android:background="@drawable/txtborder"
        android:gravity="center"
        android:text="Favourite topics"
        android:layout_marginTop="30dp"
        app:layout_constraintLeft_toLeftOf="@id/profile_layout"
        app:layout_constraintRight_toRightOf="@id/profile_layout"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:layout_constraintTop_toBottomOf="@id/img_user"
       />

    <TextView
        android:id="@+id/txt_achivements"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintHeight_percent=".15"
        app:layout_constraintWidth_percent=".8"
        android:background="@drawable/txtborder"
        android:gravity="center"
        android:text="Achivements"
        app:layout_constraintLeft_toLeftOf="@id/txt_favouriteTopics"
        app:layout_constraintRight_toRightOf="@id/txt_favouriteTopics"
        app:layout_constraintTop_toBottomOf="@id/txt_statisctic"
        android:layout_marginTop="30dp"
         />

    <ImageView
        android:id="@+id/img_backProf"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent=".05"
        app:layout_constraintStart_toStartOf="@id/profile_layout"
        app:layout_constraintTop_toTopOf="@id/profile_layout"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent=".1"
        app:srcCompat="?attr/homeAsUpIndicator" />

    <ImageView
        android:id="@+id/img_user"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:background="@android:drawable/ic_menu_camera"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent=".18"
        app:layout_constraintLeft_toLeftOf="@id/txt_favouriteTopics"
        app:layout_constraintTop_toBottomOf="@id/img_backProf"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent=".3" />

    <TextView
        android:id="@+id/txt_levelPassed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Level passed:"
        app:layout_constraintTop_toBottomOf="@id/txt_username"
        app:layout_constraintLeft_toLeftOf="@id/txt_username"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:gravity="right"
        android:text="Me"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/txt_username" />

    <TextView
        android:id="@+id/txt_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username:"
        app:layout_constraintLeft_toRightOf="@id/img_user"
        app:layout_constraintTop_toTopOf="@id/img_user"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/txt_lvl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        app:layout_constraintTop_toTopOf="@id/txt_levelPassed"
        app:layout_constraintRight_toRightOf="@id/txt_name"/>

    <TextView
        android:id="@+id/txt_c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        app:layout_constraintTop_toTopOf="@id/txt_coins"
        app:layout_constraintRight_toRightOf="@id/txt_lvl"/>

    <TextView
        android:id="@+id/txt_coins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Coins:"
        app:layout_constraintTop_toBottomOf="@id/txt_levelPassed"
        app:layout_constraintLeft_toLeftOf="@id/txt_levelPassed"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/txt_statisctic"
        android:layout_height="0dp"
        android:layout_width="0dp"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintHeight_percent=".15"
        app:layout_constraintWidth_percent=".8"
        android:background="@drawable/txtborder"
        android:gravity="center"
        android:text="Statistics"
        app:layout_constraintLeft_toLeftOf="@id/txt_favouriteTopics"
        app:layout_constraintRight_toRightOf="@id/txt_favouriteTopics"
        app:layout_constraintTop_toBottomOf="@id/txt_favouriteTopics"
        android:layout_marginTop="30dp"
/>

</androidx.constraintlayout.widget.ConstraintLayout>